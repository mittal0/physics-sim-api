# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# Basic Configuration
aws_region   = "us-west-2"
environment  = "development"
project_name = "physics-sim-api"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

# Database Configuration
db_instance_class = "db.t3.micro"
db_password       = "your-secure-password-here"

# Redis Configuration
redis_node_type  = "cache.t3.micro"
redis_auth_token = "your-redis-auth-token-here"

# Application Configuration
app_image  = "your-account.dkr.ecr.us-west-2.amazonaws.com/physics-sim-api:latest"
app_count  = 2
app_cpu    = 512
app_memory = 1024

# Worker Configuration
worker_count  = 2
worker_cpu    = 1024
worker_memory = 2048

# Optional: Domain Configuration
# domain_name     = "api.yourdomain.com"
# certificate_arn = "arn:aws:acm:us-west-2:123456789012:certificate/..."