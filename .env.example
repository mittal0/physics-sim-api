# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/physics_sim
# For development with SQLite: DATABASE_URL=sqlite:///./physics_sim.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
DEBUG=true

# Job Configuration
DEFAULT_CONTAINER_IMAGE=sim:local
ARTIFACTS_PATH=./artifacts
MAX_JOB_TIMEOUT=3600
DEFAULT_CPU_LIMIT=1.0
DEFAULT_MEMORY_LIMIT=512m

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# AWS Configuration (Optional)
AWS_REGION=us-west-2
AWS_S3_BUCKET=physics-sim-artifacts
AWS_SQS_QUEUE_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock